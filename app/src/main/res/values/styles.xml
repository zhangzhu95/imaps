<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.CustomButton" parent="android:Widget">
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Widget.Headline" parent="android:Widget">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Small" parent="android:Widget">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Address" parent="android:Widget">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#aaa</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>